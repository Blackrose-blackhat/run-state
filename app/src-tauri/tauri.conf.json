{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PortWatch",
  "version": "0.1.0",
  "identifier": "com.portwatch.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PORTWATCH",
        "width": 1000,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources":[
      "bin/portwatch-engine"
    ],
    "linux": {
      "deb": {
        "depends": ["libgtk-3-0", "libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"],
        "files": {
          "/usr/share/polkit-1/actions/org.portwatch.policy": "../../engine/org.portwatch.policy"
        }
      },
      "rpm": {
        "depends": ["gtk3", "webkit2gtk4.1", "libayatana-appindicator3-1"],
        "files": {
          "/usr/share/polkit-1/actions/org.portwatch.policy": "../../engine/org.portwatch.policy"
        }
      },
      "appimage": {
        "files": {
          "/usr/share/polkit-1/actions/org.portwatch.policy": "../../engine/org.portwatch.policy"
        }
      }
    }
  }
}
